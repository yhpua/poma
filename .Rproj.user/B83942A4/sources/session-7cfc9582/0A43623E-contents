  mutate(hp = yhmakemiss(hp, 0.4)) %>% 
  ## amongst am=1, convert to 0 only when hp<100, retain 1 if hp is missing 
  mutate(am2 = ifelse( am==1 & 
                         (!is.na(hp) & hp<100), 0, am))

