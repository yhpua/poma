mfoo <- function(x, data, ...) {
  ## x is a formula 
  ## na.omit targets whole dataframe  
  ## data[complete.cases(data[,1]), ]  ## can target specific vars
  
  cs <- all.vars(x)
  data <- na.omit(data[, cs])
  
  return(data)
}


